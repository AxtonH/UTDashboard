# Dashboard Environment Configuration
# Copy this to .env and update with your values

# Odoo Configuration
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_odoo_username
ODOO_PASSWORD=your_odoo_password

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here

# Optional: Custom port
PORT=5000

# Optional: Cache settings
CACHE_TIMEOUT=3600

# SMTP settings for weekly shareholder emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=
SMTP_USE_TLS=true

# Google Sheets Configuration
# Option 1: Path to service account JSON in filesystem
GOOGLE_SHEETS_CREDENTIALS_FILE=prezboard-4588d34b9c84.json
# Option 2: Paste raw JSON (preferred on Railway). If set, FILE is ignored.
GOOGLE_SHEETS_CREDENTIALS_JSON=
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_spreadsheet_id_here